{% extends 'layout.html.twig' %}

{% block title %}{{ "Welcome !" | trans }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-4">
            <h1>{{ "My Bookmarks" }}</h1>
        </div>
        <div class="col-md-2 offset-md-6">
            <button id="newBtn" type="button" class="btn btn-success"><i class="far fa-bookmark"></i> {{ "New bookmark" | trans }}</button>
        </div>
    </div>

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">{{ "Title" | trans }}</th>
            <th scope="col">{{ "Author" | trans }}</th>
            <th scope="col">{{ "Date" | trans }}</th>
            <th scope="col">{{ "URL" | trans }}</th>
            <th scope="col">{{ "Actions" | trans }}</th>
        </tr>
        </thead>
        <tbody>

            {% for link in links %}
                <tr>
                    <td>{{ link.title }}</td>
                    <td>{{ link.author }}</td>
                    <td>{{ link.date | date }}</td>
                    <td>{{ link.url }}</td>
                    <td>
                        <a class="editBtn" href="{{ path('bookmark_edit', {'id': link.id}) }}">
                            <i class="fas fa-pen-alt fa-lg"></i>
                        </a>
                        {{ include('bookmark/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}

        </tbody>
    </table>

    <div class="modal" tabindex="-1" role="dialog" id="modalForm">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modalBody">
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}

    <script>
        $("#newBtn").click(function(){

            $.ajax({
                type: "GET",
                url: "{{path('new_bookmark')}}"
            }).done(function (data) {
                $("#modalTitle").html('{{ "New Bookmark" | trans }}');
                $("#modalBody").html(data.form);
            }).fail(function (data){
                //TO DO : implement msgBag errors
            });

            $('#modalForm').modal('show');
        });

        $(".editBtn").click(function(e){
            e.preventDefault();
            var url = $(this).attr("href");

            $.ajax({
                type: "GET",
                url: url
            }).done(function (data) {
                $("#modalTitle").html('{{ "Edit Bookmark" | trans }}');
                $("#modalBody").html(data.form);
            }).fail(function (data){
                //TO DO : implement msgBag errors
            });

            $('#modalForm').modal('show');
        });
    </script>

{% endblock %}
