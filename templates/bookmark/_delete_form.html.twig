<form class="deleteForm" method="post" action="{{ path('bookmark_delete', {'id': link.id}) }}" onsubmit="return confirm('Are you sure you want to delete this bookmark?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ link.id) }}">
    <button class="deleteBtn"><i class="fas fa-times fa-lg"></i></button>
</form>
